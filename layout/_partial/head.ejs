<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <%
    var title = page.title;
    if (is_archive()){
        title = __('index.archive');
        if (is_month()){
            title += ': ' + page.year + '/' + page.month;
        } else if (is_year()){
            title += ': ' + page.year;
        } else {
            title = __('index.blog');
        }
    } else if (is_category()){
      title = __('index.category')+ ' ' + page.category;
    } else if (is_tag()){
      title = __('index.tag')+ ' ' + page.tag;
    }
    %>

    <title><% if (title){ %><%= title %> | <% } %><%= config.title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%- open_graph({twitter_id: theme.twitter, google_plus: theme.google_plus, fb_admins: theme.fb_admins, fb_app_id: theme.fb_app_id}) %>
    <% if (theme.rss){ %>
    <link rel="alternative" href="<%- theme.rss %>" title="<%= config.title %>" type="application/atom+xml">
    <% } %>
    <% if (theme.favicon){ %>
    <link rel="icon" href="<%- theme.favicon %>">
    <% } %>

    <%- css('assets/css/style') %>
    <% if (theme.fancybox){ %>
    <%- css('assets/fancybox/jquery.fancybox') %>
    <% } %>
    <% if (theme.scrollLoading){ %>
    <%- css('assets/scrollLoading/style') %>
    <% } %>

    <%- partial('google-analytics') %>
    <%- partial('baidu-analytics') %>

    <% if (theme.logo){ %>
    <style type="text/css">
        .logo { background-image:url(<%= theme.logo %>); }
    </style>
    <% } %>

    <% if (page.styles){ %>
    <style>
    <%= page.styles %>
    </style>
    <% } %>

    <% if (page.css){ %>
    <%- css('assets/css/'+ page.css) %>
    <% } %>
</head>
